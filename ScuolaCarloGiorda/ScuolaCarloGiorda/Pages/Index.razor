@page "/"
@using ScuolaCarloGiorda.Models
@using ScuolaCarloGiorda.Services
@inject CorsiService _corsiService
@inject SessionDataHolder _sessionDataHolder
@inject NavigationManager _navManager

<PageTitle>Index</PageTitle>

<h1>Scuola Carlo Giorda.</h1>

<table class="table table-bordered">
    <thead>
    <tr><th><button class="btn btn-primary oi oi-plus " @onclick="@ShowAddCorsoForm" title="Crea Corso"></button></th></tr>
    <tr>
        <th>Nome</th>
    </tr>
    </thead>
    <tbody>
    @foreach (Corso corso in _corsi)
    {
        <tr>
            <td>@corso.Name</td>
            <td>
                <button class="btn btn-primary oi oi-pencil" @onclick="@(() => SelectCorso(corso))" title="Modifica Corso"></button>
                <button class="btn btn-primary oi oi-delete" @onclick="@(() => DeleteCorso(corso))" title="Elimina Corso"></button>
                <button class="btn btn-primary oi oi-check" @onclick="@(() => CloseCorso(corso))" title="Chiudi Corso"></button>
            </td>
        </tr>
    }
    </tbody>
</table>

@code
{
    List<Corso>? _corsi;


    protected override void OnInitialized()
    {
        _corsi = _corsiService.ListCorsi();
    }

    private void ShowAddCorsoForm()
    {
        Corso corso = new Corso
        {
            Name = "TEST_" + DateTime.Now
        };

        _sessionDataHolder.Corso = corso;
    }

    private void SelectCorso(Corso corso)
    {
        _sessionDataHolder.Corso = corso;
        _navManager.NavigateTo("/corso");
    }

    private void DeleteCorso(Corso corso)
    {
        throw new NotImplementedException();
    }

    private void CloseCorso(Corso corso)
    {
        throw new NotImplementedException();
    }
}